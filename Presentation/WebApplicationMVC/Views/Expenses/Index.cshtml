@model MyExpenses.WebApplicationMVC.Models.ExpenseViewModel
@{
    ViewData["Title"] = "Index";
}
<h2>Index</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Expense.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expense.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expense.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expense.Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expense.How)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Expenses)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.How.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
    <h4>
        Total: @Html.DisplayFor(model => model.Total)
    </h4>
</table>
